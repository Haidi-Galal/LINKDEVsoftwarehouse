 @using LinkDev.IKEA.BLL.Models.Departments;
@model IEnumerable<DepartmentToReturnDto> 
@{
    ViewData["Title"] = "Departments";
}

<a asp-controller="Department" asp-action="Create"  class="m-auto btn btn-primary">Create New Department</a>
@if(Model.Count()>0)
{
   <table class="table table-striped table-hover mb-4">
       <thead class="text-center">
           <tr>
            <th>@Html.DisplayNameFor(D=>D.Code)</th>
            <th>@Html.DisplayNameFor(D=>D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.CreationDate)</th>
            <th>Update</th>
            <th>Details</th>
            <th>Delete</th>





           </tr>
       </thead>
       <tbody class="text-center">
          <tr>
                @foreach(var department in Model)
                {
                    <td>@department.Code</td>
                    <td>@department.Name</td>
                    <td>@department.CreationDate</td>
                    <td><button asp-controller="Department" asp-action="Details" asp-route-id="@department.Id" class="btn btn-success">Details <i class="fas fa-eye"></i></button></td>
                    <td><button asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id" class="btn btn-success">Update <i class="fas fa-edit"></i></button></td>
                    <td><button asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id" class="btn btn-success">Delete <i class="fas fa-trash"></i></button></td>

                    
                }
            </tr>
       </tbody>
   </table> 
}
else
{
    <div class="alert alert-danger mt-4" role="alert">There is No Departments !!</div>
}