@model DepartmentEditViewModel
@{
    ViewData["Title"] = "Edit Department";


}

    <div class="form-group">
        <label asp-for="Code"></label>
        <input asp-for="Code" class="form-control" value="@Model.Code" />
    </div>
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="CreationDate">CreationDate</label>
        <input asp-for="CreationDate"  type="date" name="CreationDate"  class="form-control"  />

    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
    </div>
    <form asp-action="Edit" method="post">
    <div class="mt-3">
        <input type="submit" name="Edit" value="Edit" class="btn btn-primary" /> |
        <a asp-action="Index" class="btn btn-success">Cancel</a>
    </div>
</form>